load("@pypi//:requirements.bzl", "requirement")
load("@rules_pkg//pkg:tar.bzl", "pkg_tar")

package(default_visibility = ["//visibility:public"])

py_library(
    name = "live_plotter",
    srcs = ["live_plotter.py"],
    deps = [
        requirement("matplotlib"),
        requirement("numpy"),
        requirement("SciencePlots"),
    ],
)

py_library(
    name = "dummy_live_plotter",
    srcs = ["dummy_live_plotter.py"],
    deps = [":live_plotter"],
)

py_binary(
    name = "dummy_live_plotter_main",
    srcs = ["dummy_live_plotter_main.py"],
    deps = [
        ":dummy_live_plotter",
        requirement("absl-py"),
    ],
)

py_library(
    name = "serial_live_plotter",
    srcs = ["serial_live_plotter.py"],
    deps = [
        ":live_plotter",
        "//utils/serial:serial_interface",
        requirement("absl-py"),
    ],
)

py_binary(
    name = "adc_data_live_plotter_main",
    srcs = ["adc_data_live_plotter_main.py"],
    deps = [
        ":serial_live_plotter",
        requirement("absl-py"),
    ],
)

pkg_tar(
    name = "adc_data_live_plotter_main_tar_pkg",
    srcs = [":adc_data_live_plotter_main"],
    extension = ".tar.gz",
    include_runfiles = True,
    strip_prefix = "/utils/plotter/",
)

py_binary(
    name = "adc_muxed_data_live_plotter_main",
    srcs = ["adc_muxed_data_live_plotter_main.py"],
    deps = [
        ":serial_live_plotter",
        requirement("absl-py"),
    ],
)

pkg_tar(
    name = "adc_muxed_data_live_plotter_main_tar_pkg",
    srcs = [":adc_muxed_data_live_plotter_main"],
    extension = ".tar.gz",
    include_runfiles = True,
    strip_prefix = "/utils/plotter/",
)
